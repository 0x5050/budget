{
  "functions": {
    "predeploy": [
      "npm run --prefix src build"
    ]
  },
  "hosting": {
    "predeploy": [
      "cp -R functions/nuxt/dist/ public && cp -R src/static/* public"
    ],
    "postdeploy": [
      "rm -rf public && rm -rf functions/nuxt"
    ],
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nuxt"
      }
    ]
  }
}
